   <div id="materialModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden">
        <div class="relative top-20 mx-auto p-5 border w-1/2 shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold">Add New Material</h3>
                <button id="closeMaterialModal" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form id="materialForm">
                <div class="mb-4">
                    <label for="materialName" class="block text-sm font-medium text-gray-700 mb-1">Material Name</label>
                    <input type="text" id="materialName" class="w-full px-3 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" required>
                </div>
                <div class="mb-4">
                    <label for="materialPurity" class="block text-sm font-medium text-gray-700 mb-1">Purity (%)</label>
                    <input type="number" id="materialPurity" min="0" max="100" step="0.1" class="w-full px-3 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500">
                </div>
                <div class="mb-4">
                    <label for="materialDescription" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea id="materialDescription" rows="3" class="w-full px-3 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500"></textarea>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                    <div class="flex items-center">
                        <input type="radio" id="materialActive" name="materialStatus" value="active" checked class="h-4 w-4 text-blue-600 focus:ring-blue-500">
                        <label for="materialActive" class="ml-2 block text-sm text-gray-700">Active</label>
                        <input type="radio" id="materialInactive" name="materialStatus" value="inactive" class="h-4 w-4 text-blue-600 focus:ring-blue-500 ml-4">
                        <label for="materialInactive" class="ml-2 block text-sm text-gray-700">Inactive</label>
                    </div>
                </div>
                <div class="flex justify-end space-x-3">
                    <button type="button" id="cancelMaterialBtn" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700">
                        Save Material
                    </button>
                </div>
            </form>
        </div>
    </div>