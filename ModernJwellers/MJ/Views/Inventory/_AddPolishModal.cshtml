@model MJ.Domain.ViewModels.PolishTypeVM

<!-- Polish Modal -->
<div class="modal fade" id="addPolishModal" tabindex="-1" aria-labelledby="polishModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-lg font-semibold" id="polishModalLabel">
                    @(Model.Id == 0 ? "Add New Polish Type" : "Edit Polish Type")
                </h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="polishForm">
                    @if (Model.Id != 0)
                    {
                        <input type="hidden" id="polishId" value="@Model.Id" />
                    }

                    <div class="mb-3">
                        <label for="polishName" class="form-label">Polish Name</label>
                        <input type="text" id="polishName" value="@Model.PolishName" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="polishDescription" class="form-label">Description</label>
                        <textarea id="polishDescription" rows="3" class="form-control">@Model.Description</textarea>
                    </div>

                    <div class="mb-3 ">
                        <label class="form-label">Status</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="polishStatus" id="polishActive" value="active"
                                   @(Model.Status == "active" || Model.Status == null ? "checked" : "")>
                            <label class="form-check-label" for="polishActive">Active</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="polishStatus" id="polishInactive" value="inactive"
                                   @(Model.Status == "inactive" ? "checked" : "")>
                            <label class="form-check-label" for="polishInactive">Inactive</label>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">
                            @(Model.Id == 0 ? "Save Polish Type" : "Update Polish Type")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>